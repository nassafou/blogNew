{% extends "BlogNewBundle::layout.html.twig" %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
{% block yatblog_body %}
    <h2>Liste des articles</h2>
    <ul>
        {% for article in articles %}
            {# On inclut la vue à chaque itération dans la bouché #}
            {% include "BlogNewBundle:Blog:article.html.twig" with {'accueil': true} %}
            <hr/>
        {% else %}
            <li>Pas (encore !) d'articles</li>
        {% endfor %}
    </ul>
    
    
    <div class="pagination">
        <ul>
            {# On utilise la fonction range(a,b) qui crée un tableau de valeur a et b #}
            {% for p in range(1, nombrePage ) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('yatblog_accueil', {'page': p}) }}">{{ p }}
                        
                    </a>
                {% endfor %}
                </li>
        </ul>
    </div>
{% endblock %}