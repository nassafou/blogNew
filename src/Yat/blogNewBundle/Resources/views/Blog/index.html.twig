{% extends "BlogNewBundle::layout.html.twig" %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
{% block yatblog_body %}
    <h2>Liste des articles</h2>
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('yatblog_voir', {'id': article.id }) }}">{{ article.titre}} </a>
                par {{ article.auteur }},
                le  {{ article.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>Pas (encore !) d'articles</li>
        {% endfor %}
    </ul>
    
    
    <div class="pagination">
        <ul>
            {# On utilise la fonction range(a,b) qui cr√©e un tableau de valeur a et b #}
            {% for p in range(1, nombrePage ) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('yatblog_accueil', {'page': p}) }}">{{ p }}
                        
                    </a>
                {% endfor %}
                </li>
        </ul>
    </div>
{% endblock %}